{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@libs/constants": ["libs/constants/src/index.ts"],
      "@libs/model": ["libs/model/src/index.ts"],
      "@libs/graphql": ["libs/graphql/client/src/index.ts"],
      "@libs/nestjs-core": ["libs/nestjs-core/src/index.ts"],
      "@libs/ui": ["libs/ui/src/index.ts"],
      "@libs/utils-client": ["libs/utils/src/client/index.ts"],
      "@libs/utils-server": ["libs/utils/src/server/index.ts"],
      "~/.storybook/*": [".storybook/*"],
      "~/client-next/*": ["apps/client-next/*"],
      "~/prisma/*": ["libs/prisma/*"],
      "~/server-nest/*": ["apps/server-nest/*"],
      "~/ui/*": ["libs/ui/*"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", ".next"]
}
